{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es6", 
      "outDir": "./dist",
      "baseUrl": "./lib",
      "esModuleInterop": true,
      "lib": ["ES2015.Promise", "ES5", "dom"],
      "allowJs": false,
      "alwaysStrict": true,
      "paths": {
        "@/*": ["mercurius-fastify/src/*"] 
      }
    },
    "include": [
      "mercurius-fastify/src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      ".vscode"
    ]
  }